# Backend environment variables
# Copy this file to .env and fill in your values

PORT=4000

# Local MongoDB (for development)
# MONGO_URI=mongodb://127.0.0.1:27017/grella

# MongoDB Atlas (for production) - get this from https://cloud.mongodb.com
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/grella?retryWrites=true&w=majority

# JWT secret - use a long random string in production
JWT_SECRET=grella_secret_key_123

# Frontend URL for CORS (comma-separated if multiple)
# For production: FRONTEND_URL=https://your-app.vercel.app
FRONTEND_URL=http://localhost:5173
